<h1>burgers!</h1>

<h2>Add a buger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burgers Name:</label>
    <input type="text" id="ca" name="name">
  </div>



  <button type="submit">Add burgers</button>
</form>



<ul style="float: right;">
  {{#each burgers}}
    {{#if devoured}}
    {{!--  parital should match devoured =devoured --}}
      {{> burgers/burger-block devoureda=devoured}}
    {{/if}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoureda=devoured}}
    {{/unless}}
  {{/each}}
</ul>
